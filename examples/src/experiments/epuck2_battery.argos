      <e-puck2 id="1">
         <body position="0,0.5,0" orientation="0,0,0" />
         <controller config="fdc" />
		 <epuck2_battery start_charge="1.0"/>
      </e-puck2>

   </arena>

   <!-- ******************* -->
   <!-- * Physics engines * -->
   <!-- ******************* -->
